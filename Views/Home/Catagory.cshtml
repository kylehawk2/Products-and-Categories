@using Products_and_Catagories.Models
@model Catagory

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1><a href="/">Products</a> | <a href="/Catagory">Categories</a></h1>
    <h2>New Category</h2>
    <form asp-action="" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <button type="submit">Create</button>
        </div>
    </form>

    <p>___________________________________________________________________________________________________________________________________________________</p>
    <table class="table col-sm-- mx-auto">
        <thead>
            <tr>
                <th scope="col"><h1>Existing Categories</h1></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Catagory catagory in @ViewBag.allcatagories)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="ShowCatagory" asp-route-CatagoryId="@catagory.CatagoryId">@catagory.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>